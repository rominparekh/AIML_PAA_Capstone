# MANIFEST.in - Include additional files in the package distribution

# Include documentation
include README_EDA_Tools.md
include Report_EDA.md
include LICENSE
include pyproject.toml
include setup.py
include requirements.txt
include requirements-dev.txt

# Include configuration files
include .flake8
include .gitignore

# Include Jupyter notebooks
include *.ipynb
include Complete_EDA_Analysis.ipynb

# Include Python scripts
include complete_eda_analysis.py

# Include data files
recursive-include data *.csv

# Include figure files
recursive-include figs *.png

# Include PDF report
include Customer_Segmentation_EDA_Report.pdf

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
prune .git
prune .idea
prune .vscode
prune .mypy_cache
prune .pytest_cache
prune .tox
prune build
prune dist
prune *.egg-info

